<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg">



    <com.lukedeighton.wheelview.WheelView

        android:layout_centerInParent="true"
        android:id="@+id/wheelview"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        app:emptyItemColor="@color/grey"
        app:wheelColor="@color/grey"
        app:rotatableWheelDrawable="true"
        app:selectionAngle="180.0"
        app:selectionColor="#000000"
        app:selectionPadding="10dp"
        app:repeatItems="true"
        app:wheelRadius="200dp"
        app:wheelItemCount="31"
        app:wheelPadding="13dp"
        app:wheelItemRadius="21dp"
        app:wheelItemTransformer="com.lukedeighton.wheelview.transformer.SimpleItemTransformer"
        app:wheelDrawable="@mipmap/wheel_small"

        />
    <!--  app:wheelPosition="right"
 app:wheelDrawable="@mipmap/dial1"
      app:wheelItemTransformer="com.lukedeighton.wheelview.transformer.SimpleItemTransformer"-->




    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:alpha="0.97"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:weightSum="3">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">



            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/l1"
                    android:orientation="vertical"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/dark_red"/>

                <LinearLayout
                    android:layout_toLeftOf="@+id/l1"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/class1"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/dark_red"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingBottom="5dp"
                        android:text="Very Severe"/>
                    <TextView
                        android:id="@+id/range1"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:text="20.0"/>
                    <TextView
                        android:id="@+id/name1"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Gradient mmHg"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_grey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/l2"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/red"/>

                <LinearLayout
                    android:layout_toLeftOf="@+id/l2"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/class2"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingBottom="5dp"
                        android:text="Severe"/>
                    <TextView
                        android:id="@+id/range2"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:text="20.0"/>
                    <TextView
                        android:id="@+id/name2"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="Aortic Valve Area cmÂ²"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/app_grey"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/l3"
                    android:orientation="vertical"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/mild"/>

                <LinearLayout
                    android:layout_toLeftOf="@+id/l3"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/class3"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mild"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingBottom="5dp"
                        android:text="Mild"/>
                    <TextView
                        android:id="@+id/range3"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/black"
                        android:text="20.0"/>
                    <TextView
                        android:id="@+id/name3"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="Jet Velocity m/sec"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow"/>

    <TextView
        android:id="@+id/yrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Years"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/wheelview"
        android:layout_marginLeft="80dp"
        android:gravity="center|bottom"
        android:textColor="@color/blue_edward"
        />
<!--     <TextView
         android:id="@+id/yrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Years"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            />-->



</RelativeLayout>