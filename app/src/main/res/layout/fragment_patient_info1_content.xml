<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll1"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/seekArcContainer1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:id="@+id/txt1"
                                android:layout_marginLeft="10dp"
                                android:text="@string/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <com.triggertrap.seekarc.SeekArc


                                android:id="@+id/seekArc1"
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:paddingTop="30dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingBottom="10dp"
                                seekarc:rotation="180"
                                seekarc:startAngle="90"
                                seekarc:sweepAngle="180"
                                seekarc:touchInside="true"
                                seekarc:max="70"
                                seekarc:arcColor="@color/dark_red"
                                seekarc:progressColor="@color/red"

                                />


                            <TextView
                                android:id="@+id/seekArcProgress1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textSize="15sp" />

                            <View
                                android:layout_below="@+id/seekArcContainer1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:minHeight="1dp"
                                android:background="#000000"
                                android:layout_gravity="bottom"/>
                        </FrameLayout>



                    </RelativeLayout>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll2"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <FrameLayout
                            android:id="@+id/seekArcContainer2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txt2"
                                android:layout_marginLeft="10dp"
                                android:text="@string/blood_pressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.triggertrap.seekarc.SeekArc

                                android:id="@+id/seekArc2"
                                android:layout_width="200dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:paddingTop="30dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingBottom="10dp"
                                seekarc:rotation="180"
                                seekarc:startAngle="90"
                                seekarc:sweepAngle="180"
                                seekarc:touchInside="true"
                                seekarc:max="70"
                                seekarc:arcColor="@color/dark_red"
                                seekarc:progressColor="@color/red"

                                />


                            <TextView
                                android:id="@+id/seekArcProgress2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textSize="15sp" />


                            <View
                                android:layout_below="@+id/seekArcContainer2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:minHeight="1dp"
                                android:background="#000000"
                                android:layout_gravity="bottom"/>
                        </FrameLayout>




                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll3"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt3"
                            android:layout_marginLeft="10dp"
                            android:text="@string/nyha_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:id="@+id/cb_layout"
                            android:layout_below="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cb1"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:text=" Class I"/>

                            <CheckBox
                                android:id="@+id/cb2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text=" Class I"/>

                            <CheckBox
                                android:id="@+id/cb3"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"

                                android:checked="false"
                                android:text=" Class I"/>

                        </LinearLayout>



                        <CheckBox
                            android:layout_marginLeft="10dp"
                            android:id="@+id/cb4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cb_layout"
                            android:checked="false"
                            android:text=" Class I"/>




                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


</LinearLayout>