<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


        <RelativeLayout
            android:background="@color/white"
            android:layout_margin="10dp"
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/progress_gray"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient`s Name"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_below="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_marginLeft="10dp"
                    android:text="@string/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/seekArcContainer1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.triggertrap.seekarc.SeekArc
                        android:id="@+id/seekArc1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        seekarc:rotation="180"
                        seekarc:startAngle="90"
                        seekarc:sweepAngle="180"
                        seekarc:touchInside="true"
                        seekarc:max="70"
                        seekarc:arcColor="@color/dark_red"
                        seekarc:progressColor="@color/red"

                        />

                    <TextView
                        android:id="@+id/seekArcProgress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="40sp" />
                </FrameLayout>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_below="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_marginLeft="10dp"
                    android:text="@string/blood_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/seekArcContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <com.triggertrap.seekarc.SeekArc
                        android:id="@+id/seekArc2"
                        android:layout_width="160dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="30dp"
                        seekarc:rotation="180"
                        seekarc:startAngle="90"
                        seekarc:sweepAngle="180"
                        seekarc:touchInside="true"
                        seekarc:max="70"
                        seekarc:arcColor="@color/dark_red"
                        seekarc:progressColor="@color/red"

                        />

                    <TextView
                        android:id="@+id/seekArcProgress2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:textSize="40sp" />
                </FrameLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_below="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt3"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nyha_class"/>

                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:checked="false"
                    android:text=" Class I"/>

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_toRightOf="@+id/cb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:checked="false"
                    android:text=" Class I"/>

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_toRightOf="@+id/cb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:checked="false"
                    android:text=" Class I"/>

            </RelativeLayout>

        </RelativeLayout>



 </LinearLayout>
